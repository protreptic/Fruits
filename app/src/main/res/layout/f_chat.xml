<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_chat">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/messages"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottomPanel"
        android:layout_alignParentTop="true" />

    <RelativeLayout
        android:id="@+id/bottomPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@android:color/white">

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/inputMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/submitMessage"
            android:layout_marginStart="8dp"
            android:textSize="26sp"
            android:background="@null"
            android:layout_alignBottom="@+id/submitMessage"
            android:layout_alignTop="@+id/submitMessage" />

        <android.support.v7.widget.AppCompatImageButton
            android:id="@+id/submitMessage"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_alignParentEnd="true"
            android:tint="@color/ic_tint"
            app:srcCompat="@drawable/ic_send"
            android:background="@null" />
    </RelativeLayout>
</RelativeLayout>